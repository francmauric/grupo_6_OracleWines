<head>
    <link rel="stylesheet" href="/css/style-header.css">
</head>
<header>
    <div class="navbar">
        <a href="/"><img class="logo" src="/images/Oracle Wines (5).png" alt="Oracle Wines"></a>
        <div class="barra-busqueda">
            <form action="/products/buscar/detail" method="POST">
                <input class="espacio-busqueda" type="text" placeholder="Buscar producto" name="keyword">
                <button><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
        </div>
    </div>
    <input type="checkbox" id="check">
    <label for="check" class="bar-btn">   
         <i class="fa-solid fa-bars"></i>
    </label>  
    <ul class="nav-menu">
       <li><a class="" href="/products">Productos</a></li>
       <li><a class="" id="secciones" href="/secciones">Secciones</a></li> 
    </ul>  
    <div class="navbarGral">
        <div class="navbar-inferior">
            <div class="navbar-left">
                <a class="icono-home" href="/"><i class="fa-solid fa-house"></i></a>
                <a class="seccion-menu" href="/products">Productos</a>
                <a class="seccion-menu" id="secciones" href="">Secciones</a>
                    <ul class="tipos-vinos">
                        <li><a class="seccion-menu" href="/products/andinos">Andinos </a></li>
                        <li><a class="seccion-menu" href="/products/patagonicos">Patagónicos</a></li>
                        <li><a class="seccion-menu" href="/products/importados">Importados</a></li>
                        <li><a class="seccion-menu" href="/products/premiados">Premiados</a></li>
                    </ul>
                </a>
            </div>
            <div class="navbar-right">
                <div class="logo-usuario">
                    <i class="fa-solid fa-circle-user"></i>
                    <% if (locals.isLogged) { %>
                        <ul class="reg-log">
                            <li><a class="seccion-menu" href="/users/user">Perfil </a></li>
                            <li><a class="seccion-menu" href="/products/create">Crear Producto </a></li>
                            <li><a class="seccion-menu" href="/users/logout">Log Out </a></li>
                        </ul>
                        <% } else { %>
                            <ul class="reg-log">
                                <li><a class="seccion-menu" href="/users/login">Ingresá </a></li>
                                <li><a class="seccion-menu" href="/users/register">Registrate </a></li>
                            </ul>
                            <% } %>
                </div>
                <div class="logo-carrito">
                    <a href="/products/cart"><i class="fa-solid fa-cart-shopping"></i></a>
                </div>
            </div>
        </div>
    </div>
</header>